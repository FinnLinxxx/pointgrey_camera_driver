<launch>
 <!-- left camera -->
  <!-- <include file="$(find pointgrey_camera_driver)/launch/camera.launch"/> -->
    <!-- <param name="camera_name" value="camera_left"/> -->
    <!-- <param name="camera_serial" value="12012324"/> -->
    <!-- <param name="packet_resend" value="false" /> -->
<!-- right camera -->
  <!-- <include file="$(find pointgrey_camera_driver)/launch/camera.launch"/> -->
    <!-- <param name="camera_name" value="camera_right"/> -->
    <!-- <param name="camera_serial" value="12012326"/> -->
    <!-- <param name="packet_resend" value="false" /> -->


  <arg name="calibrated" default="true" />
  <arg name="packet_resend" default="false"/>
  <arg name="frame_rate" default="15"/>
  <!-- <arg name="video_mode" default="1280x960_mono8"/> -->
  <arg name="video_mode" default="format7_mode0"/>
  <arg name="format7_color_coding" default="mono8"/>

  <!-- <group ns="stereo"> -->
  <group ns="camera_left">
  <!-- <group ns="left"> -->
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />

    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
      <param name="frame_id" value="camera_left" />
      <param name="serial" value="12012324" />
      <param name="packet_resend" value="$(arg packet_resend)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <param name="frame_rate" value="$(arg frame_rate)" />
      <param name="video_mode" value="$(arg video_mode)"/>
      <param name="format7_color_coding" value="$(arg format7_color_coding)"/>

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/12012324.yaml" />
    </node>

    <!-- <node pkg="nodelet" type="nodelet" name="image_proc_debayer" -->
    <!--       args="load image_proc/debayer camera_nodelet_manager"> -->
    <!-- </node> -->
  </group>

  <group ns="camera_right">
  <!-- <group ns="right"> -->
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />

    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >
      <param name="frame_id" value="camera_right" />
      <param name="serial" value="12012326" />
      <param name="packet_resend" value="$(arg packet_resend)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <param name="frame_rate" value="$(arg frame_rate)" />
      <param name="video_mode" value="$(arg video_mode)"/>
      <param name="format7_color_coding" value="$(arg format7_color_coding)"/>

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/12012326.yaml" />
    </node>

    <!-- <node pkg="nodelet" type="nodelet" name="image_proc_debayer" -->
    <!--       args="load image_proc/debayer camera_nodelet_manager"> -->
    <!-- </node> -->
  </group>
  <!-- </group> --> <!-- end stereo-group -->

</launch>
